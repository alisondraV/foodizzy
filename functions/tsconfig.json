{
  "compilerOptions": {
    "module": "commonjs",
    // "target": "esnext", // TODO: <-- this causes TS to fail
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
}
